<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All invoices</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous" />
</head>

<body>
    <div class="container-md">
        <header style="margin-bottom: 5px">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">BlameYourRoomie</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/invoices">Facturas</a
                  >
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/roomies">Roomies</a>
                            </li>
                            <!-- <li class="nav-item">
                            <a class="nav-link" href="#">Pricing</a>
                        </li> -->
                            <!-- <li class="nav-item">
                            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a
                >
              </li> -->
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <section>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Servicio</th>
                        <th scope="col">Total</th>
                        <th scope="col">Inicio</th>
                        <th scope="col">Fin</th>
                        <th scope="col">Pagado</th>
                    </tr>
                </thead>
                <tbody>
                    <% invoices.forEach((invoice) =>{ %>

                        <tr>
                            <th scope="row">
                                <a href="invoices/<%= invoice._id %> ">
                                    <%= invoice.service%>
                                </a>
                            </th>

                            <td>
                                <%= invoice.total%>
                            </td>
                            <td>
                                <%= invoice.begin%>
                            </td>
                            <td>
                                <%= invoice.end%>
                            </td>
                            <td>
                                <%= invoice.isPayed%>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <a href="invoices/new"><button type="button" class="btn btn-secondary">
            Nueva factura
          </button></a
        >
      </section>
    </div>
  </body>
</html>